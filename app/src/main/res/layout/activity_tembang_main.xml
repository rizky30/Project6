<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtembang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.project.xirpl606152433.belajarjawa.TembangMainActivity">

        <ImageView
            android:id="@+id/imageViewApaTembang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/apatembang" />

        <ImageView
            android:id="@+id/imageViewDefinisi"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/definisi" />

        <ImageView
            android:id="@+id/imageViewKodok"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="25dp"
            android:src="@drawable/note" />

        <ImageView
            android:id="@+id/imageViewTkodok"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kodokngorek" />


        <ImageView
            android:id="@+id/imageViewLir"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="25dp"
            android:src="@drawable/note" />

        <ImageView
            android:id="@+id/imageViewTLirilir"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lirilir" />


        <ImageView
            android:id="@+id/imageViewMenthok"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="25dp"
            android:src="@drawable/note" />

        <ImageView
            android:id="@+id/imageViewTMenthok"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/menthok" />


        <ImageView
            android:id="@+id/imageViewSluku"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="25dp"
            android:src="@drawable/note" />

        <ImageView
            android:id="@+id/imageViewTSluku"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sluku" />

    </LinearLayout>
</ScrollView>